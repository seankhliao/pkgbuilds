pkgname=gui-env
pkgver=5
pkgrel=1
pkgdesc="metapackage for my desktop environment"
arch=('any')
url='https://github.com/seankhliao/pkgbuilds'
license=('MIT')
depends=('sway'
    'sway-service'
    'xf86-video-intel'
    'mako'
    'mako-service'
    'wl-clipboard'
    'wl-clipboard-x11'
    'i3status'
    'bemenu'
    'grim'
    'slurp'
    'playerctl'
    'alsa-utils'
    'brightnessctl'
    'kitty'
    'xorg-server-xwayland'
    'google-chrome-dev'
    'noto-fonts'
    'noto-fonts-emoji'
    'noto-fonts-cjk'
    'ttf-ibm-plex')
source=('LICENSE'
    'amute.service')
sha256sums=('SKIP' 'SKIP')

package() {
    install -Dm644 LICENSE $pkgdir/usr/share/licenses/$pkgname
    install -Dm644 amute.service $pkgdir/usr/lib/systemd/user/amute.service
}
